html,
body {
	height: 100%;
}

.main-wrapper {
	position relative;
	min-height: 100%;

	.preloader-wrapper {
		position: absolute;
		left: 50%;
		top: 50%;
		margin: -100px 0 0 -100px;

		&.big {
			width: 200px;
			height: 200px;

			.circle-clipper .circle {
				border-width: 6px;
			}
		}
	}
}

.custom-icon {
	display: inline-block;
	width: 16px;
	height: 16px;
	stroke-width: 0;
	stroke: currentColor;
	fill: currentColor;
	transition: color .225s ease;
}

svg[class*="custom-icon-"] {
	color: #333333;
}

.post__like {

	span.fa {
		transition: transform .225s ease;

		&:hover {
			transform: scale(1.2);
		}
	}
}

.custom-icon-broken-heart {
	width: 18px;
	height: 18px;
	margin-right: 4px;
}
.custom-icon-broken-heart-active {
	fill: red;
}

.action-button-group {
	display: none;
}